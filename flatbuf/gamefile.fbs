namespace gamefile;

struct Vec3 {
  x:float;
  y:float;
  z:float;
}

table Mesh
{
    vertex:[Vec3];
    normal:[Vec3];
    indices:[int];
}

table Entity
{
    position:Vec3;
    mesh:Mesh;
}

table TextFile{
    shader:string;
}

table GameFile{
    version:int;
    vertex_shader:TextFile;
    fragment_shader:TextFile;
    entities:[Entity];
}

root_type GameFile;